---
- name: Dependencies
  ansible.builtin.dnf:
    name:
      - wget
      - patch
    state: latest
  become: true

- name: exclude kernel updates
  include_tasks: exclude kernel
  when: ansible_distribution_major_version | int in requires_repo

- name: add inttf.repo
  include_tasks: inttf.repo
  when: ansible_distribution_major_version | int in requires_repo
