- name: Fedora 36 & 37
  include_tasks: "{{ item }}"
  when: ansible_distribution_major_version | int in requires_repo
  with_items:
    - exclude kernel
    - inttf.repo

- name: dnf update
  ansible.builtin.dnf:
    state: latest
    update_cache: yes
    update_only: yes

